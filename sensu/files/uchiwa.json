{%- from "sensu/map.jinja" import dashboard with context -%}
{
  "sensu": [
    {
      "name": "Sensu",
      "host": "localhost",
      "ssl": false,
      "port": 4567,
      "path": "",
      "timeout": 5000
    }
  ],
  "uchiwa": {
    "host": "{{ dashboard.bind.address }}",
    "port": {{ dashboard.bind.port }},
    {%- if dashboard.get('admin', {}).get('username', None) %}
    "user": "{{ dashboard.admin.username }}",
    "pass": "{{ dashboard.admin.password }}",
    {%- endif %}
    "refresh": 5
  }
}
